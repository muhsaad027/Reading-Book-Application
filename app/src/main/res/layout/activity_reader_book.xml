<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReaderBook"
    android:orientation="vertical"
    android:weightSum="2">
    <android.support.v7.widget.Toolbar
        android:id="@+id/pagetitle"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:id="@+id/backindex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/list" />

        <TextView
            android:id="@+id/textViewheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تنہائی کے تہوار"
            android:textColor="#ffff"
            android:textSize="25dp" />


    </android.support.v7.widget.Toolbar>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/readerbackgound"

        android:layout_weight="2"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:text="اس کتاب کے بارے میں"
                android:textColor="#000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/bookcahper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:defaultFocusHighlightEnabled="false"
                android:longClickable="false"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:textIsSelectable="false"
                android:textSize="25dp" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="left"

                >
                <ImageView
                    android:id="@+id/homescreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_home_white_36dp" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/forwardtoforward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_chevron_left_white_36dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/backtoback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_chevron_right_white_36dp"
                    android:clickable="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="20dp"
                >
                <ImageView
                    android:id="@+id/zoomin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/zoominn"
                    android:clickable="true"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/zoomout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/zoomot"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
